                <Border Grid.Row="1"
                        Background="#222222"
                        Margin="8"
                        CornerRadius="8"
                        BorderBrush="#424242"
                        BorderThickness="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Infopanel"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>

                            <Separator Background="LightGray"
                                       Margin="8"/>

                            <TextBlock Text="Overview"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="8"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1"
                                    Background="#424242">
                            <TextBlock Text="Count"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>

                            <Separator Background="#222222"
                                       Margin="8"/>

                            <TextBlock Text="{Binding CounterForAllTodos, 
                                       UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2"
                                    Background="Transparent">
                            <TextBlock Text="Finished"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>

                            <Separator Background="LightGray"
                                       Margin="8"/>

                            <TextBlock Text="{Binding FinishedTodos,
                                       UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3"
                                    Background="#424242">
                            <TextBlock Text="Percent"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>

                            <Separator Background="#222222"
                                       Margin="8"/>

                            <TextBlock Text="{Binding FinishedTodosPercent,
                                       UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4"
                                    Background="Transparent">
                            <TextBlock Text="Open"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>

                            <Separator Background="LightGray"
                                       Margin="8"/>

                            <TextBlock Text="{Binding TodosStillOpen,
                                       UpdateSourceTrigger=PropertyChanged}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="8"/>
                        </StackPanel>
